exec --no-startup-id pidgin
exec --no-startup-id redshift  -l 50.07:19.92
exec --no-startup-id xautolock -time 5 -locker "i3lock -i ~/.i3/cat.png"

set $Locker i3lock -i ~/.i3/cat.png && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && user-suspend, mode "default"
    bindsym r exec --no-startup-id sudo reboot, mode "default"
    bindsym Shift+s exec --no-startup-id sudo poweroff, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+l mode "$mode_system"

