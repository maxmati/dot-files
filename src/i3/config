bindsym XF86Launch6 exec --no-startup-id "xrandr --output HDMI-A-1 --off --output DisplayPort-1 --mode 1920x1080 --rotate left --output DVI-D-0 --mode 1920x1080 --right-of DisplayPort-1 --rotate left"
bindsym XF86Launch7 exec --no-startup-id "xrandr --output HDMI-A-1 --mode 1920x1080 --output DisplayPort-1 --off --output DVI-D-0 --off"
