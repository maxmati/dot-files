#set $Locker scrot -z /tmp/bg.png && convert -scale 20% -scale 500% /tmp/bg.png /tmp/bg.png && i3lock -i /tmp/bg.png -n && sleep 1 && rm /tmp/bg.png
set $Locker swaylock --ignore-empty-password --show-failed-attempts --color 1e1e1e

exec swayidle -w timeout 900 'swaymsg "output * power off"' resume 'swaymsg "output * power on"'
#exec --no-startup-id xautolock -time 5 -locker "$Locker"

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec swaylock --ignore-empty-password --show-failed-attempts --color 1e1e1e
    bindsym e mode "default", exec --no-startup-id i3-msg exit
    bindsym s mode "default",  exec --no-startup-id $Locker && user-suspend
    bindsym h mode "default", exec --no-startup-id $Locker && user-hibernate
    bindsym r mode "default", exec --no-startup-id sudo reboot
    bindsym Shift+s exec --no-startup-id sudo poweroff  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

#bindsym $mod+l mode "$mode_system"
bindsym $mod+l exec $locker

set $sink 0

bindsym XF86Launch5 exec --no-startup-id "xrandr --output HDMI-A-1 --mode 1920x1080 --above DisplayPort-1 --output DisplayPort-1 --mode 1920x1080 --rotate left --output DVI-D-0 --mode 1920x1080 --right-of DisplayPort-1 --rotate left"
bindsym XF86Launch6 exec --no-startup-id "xrandr --output HDMI-A-1 --off --output DisplayPort-1 --mode 1920x1080 --rotate left --output DVI-D-0 --mode 1920x1080 --right-of DisplayPort-1 --rotate left"
bindsym XF86Launch7 exec --no-startup-id "xrandr --output HDMI-A-1 --mode 1920x1080 --output DisplayPort-1 --off --output DVI-D-0 --off"

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec "pactl set-sink-volume $sink +5%; killall -USR1 i3status"
bindsym XF86AudioLowerVolume exec "pactl set-sink-volume $sink -5%; killall -USR1 i3status"
bindsym XF86AudioMute exec "pactl set-sink-mute $sink toggle; killall -USR1 i3status"

